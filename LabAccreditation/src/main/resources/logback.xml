<?xml version="1.0" encoding="UTF-8"?>
<configuration>



	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    	<encoder>
      		<pattern>%d{HH:mm:ss.SSS} %-5level (%file:%line\) - %msg%n</pattern>
    	</encoder>
  	</appender>
  	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>\${jetty.home}/logs/jetty.log</file>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<fileNamePattern>jetty_%d{yyyy-MM-dd}.log</fileNamePattern>
      		<maxHistory>30</maxHistory>
    	</rollingPolicy>
 
    	<encoder>
      	<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
 

	<root level="WARN">
    	<appender-ref ref="STDOUT" />
    <!-- 	<appender-ref ref="FILE" /> -->
  	</root>
  	
  	<!-- logger name="org.springframework" level="DEBUG"/ -->
	<logger name="th.go.dss.labaccreditation" level="${config.logback.level}"/>
	<logger name="org.thymeleaf" level="WARN"/>
  		
</configuration>
